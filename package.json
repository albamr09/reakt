{
	"name": "reakt",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"prebuild": "pnpm depcruise src && pnpm lint:check",
		"build": "NODE_ENV=production tsup",
		"build:dev": "tsup",
		"example:dev": "pnpm build:dev && cd examples && pnpm install && pnpm build:dev && pnpm serve",
		"example:prebuild": "cd examples && pnpm lint:check",
		"example:build": "pnpm build && cd examples && pnpm build",
		"lint:check": "biome check src",
		"lint:format": "biome format --write src",
		"lint:fix": "biome check --write src",
		"prepare": "husky"
	},
	"description": "Reakt Library",
	"main": "build/index.js",
	"module": "build/index.mjs",
	"types": "build/index.d.ts",
	"files": [
		"build"
	],
	"keywords": [
		"typescript",
		"library"
	],
	"author": "Alba Martínez Rodríguez",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/albamr/reakt"
	},
	"bugs": {
		"url": "https://github.com/albamr09/reakt/issues"
	},
	"homepage": "https://github.com/albamr/reakt#readme",
	"devDependencies": {
		"@types/node": "^25.0.3",
		"dependency-cruiser": "^17.3.5",
		"husky": "^9.1.7",
		"tsup": "^8.5.1",
		"typescript": "^5.9.3"
	}
}
