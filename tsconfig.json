{
	"include": ["src"],
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@reakt/*": ["src/*"]
		},
		"module": "ES2015",
		"target": "ES2015",
		"lib": ["ES2017", "DOM"],
		"declaration": true,
		"strict": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"rootDir": "src"
	}
}
