{
	"include": ["src"],
	"compilerOptions": {
		"baseUrl": ".",
    "paths": {
      "@reakt/*": ["src/*"]
    },
		"module": "esnext",
		"target": "esnext",
		"lib": ["esnext"],
		"declaration": true,
		"strict": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"rootDir": "src"
	}
}
