{
	"include": ["src"],
	"compilerOptions": {
		"baseUrl": ".",
    "paths": {
      "@reakt/*": ["src/*"]
    },
		"module": "ES2015",
		"target": "ES2015",
		"lib": ["ES2015"],
		"declaration": true,
		"strict": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"rootDir": "src"
	}
}
